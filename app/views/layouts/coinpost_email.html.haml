!!!
%html(lang="en")
  %head
    %meta{ 'http-equiv' => 'content-type', 'content' => 'text/html; charset=utf-8' }
    %title CoinPost.com e-mail
  %body(style="display:block !important; background:#ffffff;")
    -@fg_color = '#ECA525'
    =render :layout => 'layouts/email_borders', 
      :locals => {:fg_color => @fg_color, :fade_color => '#fff6de'} do
      %table(width="100%" border="0" cellspacing="0" cellpadding="0")
        %tr
          %td{:style=>"border-bottom:solid 1px %s;" % @fg_color}
            =link_to image_tag('https://www.coinpost.com/images/coinpost-email-logo.png', 
              :height => 35, :alt => "CoinPost Logo", :border => 0 ), 
              root_url, :target => '_blank'
            %div(style="font-size:15px; line-height:15px; height:15px") &nbsp;
        %tr
          %td{:style=>"border-bottom:solid 1px %s;" % @fg_color}
            %div(style="font-size:12px; line-height:12px; height:12px") &nbsp;
            %div(style="color:#000000; font-size:14px; line-height:18px;")
              %strong
                Please do not reply directly to this email. Instead, reply through
                =link_to "your CoinPost account", dashboard_index_url, 
                  :style => "color:%s" % @fg_color, :target => '_blank'
                inbox.
            %div(style="font-size:12px; line-height:12px; height:12px") &nbsp;
      =yield
      %table(width="100%" border="0" cellspacing="0" cellpadding="0")
        %tr
          %td{:style=>"border-top:solid 1px %s;" % @fg_color}
            %div(style="font-size:12px; line-height:12px; height:12px") &nbsp;
            %table(width="100%" border="0" cellspacing="0" cellpadding="0")
              %tr
                %td(valign="top" style="font-family:'Trebuchet MS'; font-size:14px; line-height:18px;" align="left")
                  %strong
                    =link_to "View Dashboard", dashboard_index_url, 
                      :style => "color:%s" % @fg_color, :target => '_blank'
                %td(valign="top" style="font-family:'Trebuchet MS'; font-size:14px; line-height:18px;" align="right")
                  =link_to "CoinPost", root_url, :target => '_blank'

